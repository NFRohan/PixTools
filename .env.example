# === AWS ===
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=pixtools-images

# === Database (RDS) ===
DATABASE_URL=postgresql+asyncpg://pixtools:password@localhost:5432/pixtools

# === Redis ===
REDIS_URL=redis://localhost:6379/0

# === RabbitMQ ===
RABBITMQ_URL=amqp://guest:guest@localhost:5672//
ML_QUEUE_ISOLATION_ENABLED=true

# === Idempotency ===
IDEMPOTENCY_TTL_SECONDS=86400

# === Webhook Circuit Breaker ===
WEBHOOK_CB_FAIL_THRESHOLD=5
WEBHOOK_CB_RESET_TIMEOUT=60

# === Observability ===
OBSERVABILITY_ENABLED=false
METRICS_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME_API=pixtools-api
OTEL_SERVICE_NAME_WORKER=pixtools-worker

# === Spot Alerts (Terraform) ===
ALERT_EMAIL=your-email@example.com
